<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingLeft="10dp"
    android:paddingTop="200dp"
    tools:context=".CalculatriceActivity">

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="#0C0C0C"
        android:text="AC"
        android:textColor="@android:color/holo_purple"
        android:textColorHighlight="@color/teal_700"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonPlusouMoins"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="#0C0C0C"
        android:text="+/-"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonPourcentage"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#0C0C0C"
        android:text="%"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:backgroundTint="#0C0C0C"
        android:text="/"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#0C0C0C"
        android:text="8"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#0C0C0C"
        android:text="7"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#0C0C0C"
        android:text="9"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonMultiplier"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#0C0C0C"
        android:text="*"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#0C0C0C"
        android:text="4"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#0C0C0C"
        android:text="5"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#0C0C0C"
        android:text="6"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonMoins"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#0C0C0C"
        android:text="-"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#0C0C0C"
        android:text="1"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#0C0C0C"
        android:text="2"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#0C0C0C"
        android:text="3"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#0C0C0C"
        android:text="+"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />


    <Button
        android:id="@+id/button0"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#0C0C0C"
        android:text="0"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonVirgule"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#0C0C0C"
        android:text=","
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonEgal"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#0C0C0C"
        android:text="="
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-150dp"
        android:layout_marginRight="10dp"
        android:padding="50dp"
        android:text="TextView" />
</RelativeLayout>